<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.market.mapper.ProductMapper">
    <select id="selectPro" resultType="Product">
        select * from market.product
        <where>
             <if test="pro.id!=null and pro.id!=0">
                 and id=#{pro.id}
             </if>
        </where>
    </select>
    <select id="selectPro1" resultType="Product">
        select * from market.product
        <where>
            <if test="id!=null and id!=0">
                and id=#{id}
            </if>
        </where>
    </select>
    <update id="update" parameterType="Product">
        update market.product
           <set>
            <if test="quantity!=null and quantity!=0">
               quantity=#{quantity}
            </if>
           </set>
        <where>
            <if test="id!=null and id!=0">
            id=#{id}
            </if>
        </where>
    </update>
</mapper>